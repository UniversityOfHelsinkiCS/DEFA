{
  "name": "defa-backend",
  "version": "1.0.0",
  "description": "DEFA",
  "repository": "UniversityOfHelsinkiCS/DEFA",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build": "tsc",
    "lint": "tslint 'src/**/*.ts'",
    "start": "node dist/src/server.js",
    "test": "jest",
    "watch-node": "nodemon",
    "watch-ts": "tsc --watch",
    "precommit": "npm run lint",
    "prepush": "npm run lint && npm test"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^14.0.2",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.15",
    "saml2-js": "^2.0.3",
    "tslint": "^5.11.0"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-graphql": "^0.6.1",
    "@types/graphql": "^14.0.0",
    "@types/jest": "^23.3.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongoose": "^5.2.15",
    "@types/node": "^10.9.4",
    "@types/saml2-js": "^1.6.7",
    "concurrently": "^4.0.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "ts-jest": "^23.10.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.0.3",
    "typescript-eslint-parser": "^18.0.0"
  }
